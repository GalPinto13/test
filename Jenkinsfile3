pipeline {
    agent none

    stages {
        stage('Run Tests') {
            parallel {
                stage('Agent 1') {
                    agent {
                        label 'master'
                    }
                    steps {
                        
                        script {
                    def osName = env.OS
                    def osVersion = env.OS_VERSION

                    echo "Operating System: ${osName}"
                    echo "Operating System Version: ${osVersion}"
                }
                    }
                }

                stage('Agent 2') {
                    agent {
                        label 'SlaveWindows'
                    }
                    steps {
                       
                        script {
                    def osName = env.OS
                    def osVersion = env.OS_VERSION

                    echo "Operating System: ${osName}"
                    echo "Operating System Version: ${osVersion}"
                }
                    }
                }
            }
        }
    }
}
