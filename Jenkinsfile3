pipeline {
    agent none

    stages {
        stage('Run Tests') {
            parallel {
                stage('Agent 1') {
                    agent {
                        label 'master'
                    }
                    steps {
                        def osVersion = System.getProperty('os.version')
                        println "Linux Operating System Version: ${osVersion}"
                    }
                }

                stage('Agent 2') {
                    agent {
                        label 'windows'
                    }
                    steps {
                        def osVersion = System.getProperty('os.version')
                        println "Windows Operating System Version: ${osVersion}"
                    }
                }
            }
        }
    }
}