pipeline {
    agent none

    stages {
        stage('Run Tests') {
            parallel {
                stage('Agent 1') {
                    agent {
                        label 'master'
                    }
                    steps {
                        
                        script {
                    println 'OS in linux:'
                    sh 'uname -a'
                    
                }
                    }
                }

                stage('Agent 2') {
                    agent {
                        label 'SlaveWindows'
                    }
                    steps {
                       
                        script {
println 'OS in windows:'
                    bat 'systeminfo | find "OS Version"'
                }
                    }
                }
            }
        }
    }
}
